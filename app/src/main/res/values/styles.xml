<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title1" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/font_sfpro_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title2" parent="Title1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title3" parent="Title1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title4" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/font_sfpro_semibold_italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text1" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/font_sfpro_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_6</item>
    </style>

    <style name="Text2" parent="Text1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText1" parent="Title1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/font_sfpro_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TabItemTextActiveAppearance" parent="TabText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TabItemTextInActiveAppearance" parent="TabText">
        <item name="android:textColor">@color/grey_6</item>
    </style>

    <style name="OfferImage">
        <item name="cornerSize">15%</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>